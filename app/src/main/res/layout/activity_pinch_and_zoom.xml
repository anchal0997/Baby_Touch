<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anchalgarg.babytouch.PinchAndZoomActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300sp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/stopWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="21sp"
        android:layout_marginRight="21sp"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/strtStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="29sp"
        android:layout_marginStart="29sp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:background="@drawable/btn_green"
        android:text="Start" />

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/stopWatch"
        android:layout_toStartOf="@+id/stopWatch"
        android:background="@drawable/btn_green"
        android:text="Menu" />


    <ImageButton
        android:id="@+id/target2"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="220sp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/white_star"

        />


    <ImageButton
        android:id="@+id/target3"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="360sp"
        app:srcCompat="@drawable/tri_white" />

    <ImageButton
        android:id="@+id/target1"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="200sp"
        android:layout_marginTop="230sp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/white_ball" />

    <ImageButton
        android:id="@+id/target4"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginLeft="200sp"
        android:layout_marginTop="360sp"
        android:background="@android:color/white"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/white_tria" />


    <ImageButton
        android:id="@+id/image1"
        android:layout_width="52sp"
        android:layout_height="53sp"
        android:layout_marginTop="39sp"
        android:layout_marginLeft="20sp"

        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/red__ball"

        />

    <ImageButton
        android:id="@+id/image2"
        android:layout_width="62sp"
        android:layout_height="63sp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/star"
        android:layout_marginTop="130sp"
        android:layout_marginLeft="20sp"

        tools:layout_editor_absoluteX="76sp"
        tools:layout_editor_absoluteY="200sp"
        />

    <ImageButton
        android:id="@+id/image4"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="40sp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/tri_red" />

    <ImageButton
        android:id="@+id/image3"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="240sp"
        android:layout_marginTop="45sp"
        app:srcCompat="@drawable/rect_red"


        />
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </FrameLayout>

</RelativeLayout>
