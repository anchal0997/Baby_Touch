<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/front_page_best"
    tools:context="com.example.anchalgarg.babytouch.MainActivity">

    <Button
        android:id="@+id/playBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/playBtn"
        android:layout_alignRight="@+id/playBtn"
        android:layout_below="@+id/playBtn"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/abtBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/options"
        android:layout_alignRight="@+id/options"
        android:layout_below="@+id/options"
        android:layout_marginTop="26dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/red_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playBtn"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/playBtn"
        app:srcCompat="@drawable/red__ball" />
</RelativeLayout>
